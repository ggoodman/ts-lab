  "description": "An opinionated wrapper over @hapi/lab with typescript and disposables support",
  "main": "dist/dist-main/index.js",
  "transforms": "dist/dist-main/transforms.js",
  "types": "./dist/dist-main/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "ts-lab": "./bin/ts-lab"

  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ggoodman/ts-lab/issues"
  },
  "homepage": "https://github.com/ggoodman/ts-lab#readme",
  "dependencies": {
    "@hapi/code": "^7.0.0",
    "@hapi/lab": "^21.0.0",
    "ts-primitives": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^12.12.19",
    "@wessberg/rollup-plugin-ts": "^1.1.80",
    "prettier": "^1.19.1",
    "rollup": "^1.27.4",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
